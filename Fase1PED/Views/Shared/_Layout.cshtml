<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Clientes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fase1PED.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo o título -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Financiera EFI-FAST</a>

                <!-- Botón de colapso en pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú de navegación -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Clasificación Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Clustering" asp-action="Index">Manejo de Tarjetas/Clientes</a>
                        </li>
                       
                    </ul>

                    <!-- Botones de acción a la derecha -->
                    <div class="d-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Cerrar Sesión</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container text-center">
            &copy; 2024 - Proyecto Final PED - <a asp-area="" asp-controller="Home" asp-action="Privacy">Sistema de Gestión Bancaria</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>